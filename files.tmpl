<templatizer lib="files.so">
<html>
  <head>
    <meta charset="UTF-8"/>
    <title>Files</title>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <link rel="icon" type="image/x-icon" href="favicon.png"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <include file="css.tmpl"/>
    <style>
      .ellipsis {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }
      .icon-column {
        width: 2em;
      }
    </style>
  </head>
  <body>
    <include file="header.tmpl"/>

    <table style="width: 100%; table-layout: fixed;">
      <tr>
        <th class="icon-column"></th>
        <th class="ellipsis">Nome</th>
        <th class="ellipsis">MIME</th>
        <th class="ellipsis">Descrição</th>
        <th class="ellipsis">Aplicativo</th>
      </tr>
      <swhile>
        <tr>
	  <td class="icon-column"><i class="@" style="font-size: 2em;"></i></td>
          <td class="ellipsis"><span>@</span></td>
          <td class="ellipsis"><span>@</span></td>
          <td class="ellipsis"><span>@</span></td>
          <td class="ellipsis"><span>@</span></td>
      </tr>
      </swhile>
    </table>

    <include file="footer.tmpl"/>
    <include file="scripts.tmpl"/>
    <script src="js/sort-table.js"></script>
  </body>
</html>
</templatizer>
